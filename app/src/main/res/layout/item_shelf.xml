<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="116dp"
        android:layout_height="127dp"
        android:background="@drawable/shlf_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:background="@drawable/skincare"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="ABC Ayurveda"
            android:fontFamily="@font/belleza_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_god_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Jasmine Night Treatment"
            android:fontFamily="@font/belleza_regular"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="7dp"
            android:text="20/01/2022"
            android:fontFamily="@font/belleza_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_god_name"/>

        <LinearLayout
            android:id="@+id/rating_1"
            android:layout_width="60dp"
            android:layout_height="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/s1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_outline_star_rate_24"/>

            <ImageView
                android:id="@+id/s2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_outline_star_rate_24"/>

            <ImageView
                android:id="@+id/s3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_outline_star_rate_24"/>

            <ImageView
                android:id="@+id/s4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_outline_star_rate_24"/>

            <ImageView
                android:id="@+id/s5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_outline_star_rate_24"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>